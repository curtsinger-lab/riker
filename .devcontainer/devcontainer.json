{
  "name": "Dodo Development",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--hostname=dev",
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "settings": { 
		"terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
		"ms-vscode.cpptools"
  ],
  // Comment out the line below to run as root
  "remoteUser": "vscode",
}